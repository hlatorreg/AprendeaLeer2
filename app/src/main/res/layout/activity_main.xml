<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image_bg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/sesionAlumno"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#fea"
        android:text=""
        android:shadowRadius="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <com.example.meriadok.aprendealeer2.AutoResizeTextViewSunn
        android:id="@+id/titleText"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#fea"
        android:padding="10dp"
        android:text="Aprende a leer"
        android:shadowRadius="5"
        android:layout_below="@+id/sesionAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.example.meriadok.aprendealeer2.AutoResizeTextViewSunn
        android:id="@+id/playText"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:textColor="#fea"
        android:text="Jugar"
        android:paddingTop="20dp"
        android:shadowRadius="5"
        android:layout_below="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/playText"
        android:layout_marginTop="0dp"
        android:src="@drawable/book"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.example.meriadok.aprendealeer2.AutoResizeTextViewSunn
        android:id="@+id/advertencia"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="#fea"
        android:text="se han completado las 5 sesiones diarias, se recomienda descanso"
        android:layout_below="@id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/configButton"
        android:src="@drawable/boton_config"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
